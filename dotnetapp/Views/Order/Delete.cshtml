@model dotnetapp.Models.Order

<h1>Delete Order</h1>
<h4>Are you sure you want to delete this order?</h4>
<div>
    <h4>Order Details</h4>
    <dl>
        <dt>Date:</dt>
        <dd>@Model.Date.ToShortDateString()</dd>
        <dt>Order ID:</dt>
        <dd>@Model.OrderID</dd>
        <dt>Food Name:</dt>
        <dd>@Model.FoodName</dd>
        <dt>Price:</dt>
        <dd>@Model.Price</dd>
        <dt>Rating:</dt>
        <dd>@Model.rating</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
        <input type="submit" value="Delete" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
