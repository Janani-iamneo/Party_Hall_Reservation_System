@model IEnumerable<dotnetapp.Models.FoodOrder>

<h1>Food Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Food Name</th>
            <th>Price</th>
            <th>Order Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var foodOrder in Model)
        {
            <tr>
                <td>@foodOrder.Id</td>
                <td>@foodOrder.FoodName</td>
                <td>@foodOrder.Price</td>
                <td>@foodOrder.OrderDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@foodOrder.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@foodOrder.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@foodOrder.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New</a>
