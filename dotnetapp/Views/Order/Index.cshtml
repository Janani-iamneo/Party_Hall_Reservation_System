@model List<dotnetapp.Models.Order>

<h1>Orders</h1>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>OrderID</th>
            <th>FoodName</th>
            <th>Price</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Date.ToShortDateString()</td>
                <td>@order.OrderID</td>
                <td>@order.FoodName</td>
                <td>@order.Price</td>
                <td>@order.rating</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@order.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create">Create New</a>
