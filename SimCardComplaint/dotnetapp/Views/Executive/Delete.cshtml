@model dotnetapp.Models.Executive

<h2>Delete Executive</h2>

<div>
    <h4>Are you sure you want to delete this executive?</h4>
    <div>
        <h3>@Model.ExecutiveName</h3>
        <!-- Display other executive details -->
        <p>Executive ID: @Model.ExecutiveID</p>
        <!-- Add other executive details to display -->

        <form asp-action="Delete" asp-route-id="@Model.ExecutiveID" method="post">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
