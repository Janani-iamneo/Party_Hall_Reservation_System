@model IEnumerable<dotnetapp.Models.Executive>

<h2>Executive List</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Executive ID</th>
            <th>Name</th>
            <th>Contact Number</th>
            <th>Complaints</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var executive in Model)
        {
            <tr>
                <td>@executive.ExecutiveID</td>
                <td>@executive.ExecutiveName</td>
                <td>@executive.ContactNumber</td>
                <td>@executive.Complaints</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@executive.ExecutiveID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@executive.ExecutiveID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
