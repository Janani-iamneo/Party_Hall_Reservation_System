@model dotnetapp.Models.Executive

<h2>Edit Executive</h2>
<form asp-controller="Executive" asp-action="Edit" method="post">
    <input type="hidden" asp-for="ExecutiveID" />

    <div class="form-group">
        <label asp-for="ExecutiveName"></label>
        <input asp-for="ExecutiveName" class="form-control" />
        <span asp-validation-for="ExecutiveName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContactNumber"></label>
        <input asp-for="ContactNumber" class="form-control" />
        <span asp-validation-for="ContactNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Complaints"></label>
        <input asp-for="Complaints" class="form-control" />
        <span asp-validation-for="Complaints" class="text-danger"></span>
    </div>

    <!-- Display all available Complaints for selection -->
    <div class="form-group">
        <label>Complaints</label>
        <br />
        @if (ViewBag.AllComplaints != null)
        {
            @foreach (var complaint in ViewBag.AllComplaints)
            {
                <div>
                    <input type="checkbox" id="complaint_@complaint.ComplaintID" name="SelectedComplaints" value="@complaint.ComplaintID" 
                           @(Model.Complaints.Any(c => c.ComplaintID == complaint.ComplaintID) ? "checked" : "") />
                    <label for="complaint_@complaint.ComplaintID">@complaint.Description</label>
                </div>
            }
        }
        else
        {
            <p>No complaints available.</p>
        }
        <span asp-validation-for="Complaints" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
