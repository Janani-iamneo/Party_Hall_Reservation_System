@model List<dotnetapp.Models.Complaint>

<table class="table">
    <thead>
        <tr>
            <th>Customer Name</th>
            <!-- Other columns as needed -->
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var complaint in Model)
        {
            <tr>
                <td>@complaint.CustomerName</td>
                <!-- Other columns for complaint details -->
                <td>
                    @using (Html.BeginForm("UpdateStatus", "Complaint", FormMethod.Post))
                    {
                        @Html.Hidden("complaintId", complaint.ComplaintID)
                        <select name="newStatus" class="form-control" onchange="this.form.submit()">
                            <option value="Pending" @(complaint.Status == "Pending" ? "selected" : "")>Pending</option>
                            <option value="Under Investigation" @(complaint.Status == "Under Investigation" ? "selected" : "")>Under Investigation</option>
                            <option value="Resolved" @(complaint.Status == "Resolved" ? "selected" : "")>Resolved</option>
                        </select>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
