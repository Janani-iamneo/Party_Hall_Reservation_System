@model dotnetapp.Models.Complaint
<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CustomerName"></label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SIMCardNumber"></label>
        <input asp-for="SIMCardNumber" class="form-control" />
        <span asp-validation-for="SIMCardNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="ContactNumber"></label>
        <input asp-for="ContactNumber" class="form-control" />
        <span asp-validation-for="ContactNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExecutiveID">Enter Executive ID</label>
        <select asp-for="ExecutiveID" asp-items="@(new SelectList(ViewBag.Executives, "Value", "Text"))" class="form-control">
            <option value="">Select Executive</option>
        </select>
        <span asp-validation-for="ExecutiveID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status">Status</label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    @Html.AntiForgeryToken()
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>
